#!/bin/bash
#
# ~/.bash_colors
#

export BOLD=$(tput bold)

export RESET_COLOR=$(tput sgr0)

export BLACK=$(  tput setaf 0 || tput AF 0)
export RED=$(    tput setaf 1 || tput AF 1)
export GREEN=$(  tput setaf 2 || tput AF 2)
export YELLOW=$( tput setaf 3 || tput AF 3)
export BLUE=$(   tput setaf 4 || tput AF 4)
export MAGENTA=$(tput setaf 5 || tput AF 5)
export CYAN=$(   tput setaf 6 || tput AF 6)
export WHITE=$(  tput setaf 7 || tput AF 7)

export BLACK_BOLD=$BOLD$BLACK
export RED_BOLD=$BOLD$RED
export GREEN_BOLD=$BOLD$GREEN
export YELLOW_BOLD=$BOLD$YELLOW
export BLUE_BOLD=$BOLD$BLUE
export MAGENTA_BOLD=$BOLD$MAGENTA
export CYAN_BOLD=$BOLD$CYAN
export WHITE_BOLD=$BOLD$WHITE
