conky.config = {
  background = false,
  cpu_avg_samples = 2,
  net_avg_samples = 2,
  no_buffers = false,
  out_to_stderr = false,
  update_interval = 1.0,
  uppercase = false,
  use_spacer = 'none',
  no_buffers = true,
  console_graph_ticks = " ,_,▁,▂,▃,▄,▅,▆,▇,█",
};

conky.text = [[ ${exec clear}              ▲
┌─────────────┘   
│
├─ ${nodename}
│   ├─  kernel    [ $kernel ]
│   ├─  arch      [ $machine ]
│   └─  uptime    [ $uptime ]
│
├─ system
│   ├─ cpu
│   │   ├─ used
│   │   │   ├─ CPU1 [ ${cpu cpu1}%  ${cpubar 1} ]
│   │   │   ├─ CPU2 [ ${cpu cpu2}%  ${cpubar 2} ]
│   │   │   ├─ CPU3 [ ${cpu cpu3}%  ${cpubar 3} ]
│   │   │   └─ CPU4 [ ${cpu cpu4}%  ${cpubar 4} ]
│   │   ├─ freq
│   │   │   ├─ CPU1 [ ${freq_g 1}Ghz ]
│   │   │   ├─ CPU2 [ ${freq_g 2}Ghz ]
│   │   │   ├─ CPU3 [ ${freq_g 3}Ghz ]
│   │   │   └─ CPU4 [ ${freq_g 4}Ghz ]
│   │   │
│   │   ├─ load [ ${loadavg} ]
│   │   ├─ [ ${top name 1}  ${top cpu 1} ]
│   │   ├─ [ ${top name 2}  ${top cpu 2} ]
│   │   ├─ [ ${top name 3}  ${top cpu 3} ]
│   │   ├─ [ ${top name 4}  ${top cpu 4} ]
│   │   └─ [ ${top name 5}  ${top cpu 5} ]
│   └─ processes
│       ├─ total   [ $processes ]
│       └─ running [ $running_processes ]
│
├─ resources
│   ├─ read  [ $diskio_read ]
│   ├─ write [ $diskio_write ]
│   │   ├─ [ ${top_io name 1}  ${top_io io_perc 1} ]
│   │   ├─ [ ${top_io name 2}  ${top_io io_perc 2} ]
│   │   ├─ [ ${top_io name 3}  ${top_io io_perc 3} ]
│   │   ├─ [ ${top_io name 4}  ${top_io io_perc 4} ]
│   │   └─ [ ${top_io name 5}  ${top_io io_perc 5} ]
│   ├─ ram
│   │   ├─ used [ $memperc% ${membar} ]
│   │   │   └─  [ $mem/$memmax ]
│   │   ├─ [ ${top_mem name 1}  ${top_mem mem_res 1} ]
│   │   ├─ [ ${top_mem name 2}  ${top_mem mem_res 2} ]
│   │   ├─ [ ${top_mem name 3}  ${top_mem mem_res 3} ]
│   │   ├─ [ ${top_mem name 4}  ${top_mem mem_res 4} ]
│   │   └─ [ ${top_mem name 5}  ${top_mem mem_res 5} ]
│   ├─ swap [ $swapfree ${swapbar} ]
│   ├─ root [ ${fs_free /} ${fs_bar /} ]
│   └─ home [ ${fs_free /home}  ${fs_bar /home} ]
│
├─ users
${exec ~/.bin/activeusers -t}
│
└─ net
    ├─ up   [ ${upspeed enp0s25} ]
    └─ down [ ${downspeed enp0s25} ]
]];
